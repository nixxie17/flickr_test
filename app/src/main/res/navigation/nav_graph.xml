<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.flickrtest.flickrtestapp.splashFeature.SplashFragment"
        android:label="@string/splash_title"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.flickrtest.flickrtestapp.searchFeature.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_searchFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"/>
    </fragment>

    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.flickrtest.flickrtestapp.searchResultFeature.SearchResultFragment"
        android:label="search_result_fragment"
        tools:layout="@layout/search_result_fragment" >
        <argument
            android:name="keyword"
            app:argType="string" />
    </fragment>
</navigation>